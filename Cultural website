    <script>
        // Dark Mode
        function toggleDarkMode() {
            document.body.classList.toggle('dark');
            const isDark = document.body.classList.contains('dark');
            localStorage.setItem('darkMode', isDark);
            document.querySelector('.dark-mode-toggle').textContent = isDark ? 'Light Mode' : 'Dark Mode';
        }
        if (localStorage.getItem('darkMode') === 'true') {
            document.body.classList.add('dark');
            document.querySelector('.dark-mode-toggle').textContent = 'Light Mode';
        }

        // Search
        function searchPage() {
            let query = document.getElementById("searchInput").value.toLowerCase().trim();
            let content = document.querySelectorAll("#content h3, #content p");
            document.querySelectorAll(".highlight").forEach(el => el.outerHTML = el.innerHTML);
            if (!query) return;
            let found = false;
            content.forEach(el => {
                if (el.textContent.toLowerCase().includes(query)) {
                    found = true;
                    let regex = new RegExp((${query}), "gi");
                    el.innerHTML = el.innerHTML.replace(regex, <span class="highlight">$1</span>);
                }
            });
            if (!found) alert(No results for "${query}");
        }
        document.getElementById("searchInput").addEventListener("keypress", e => {
            if (e.key === "Enter") searchPage();
        });

        // Quiz Logic
        let currentQuiz = null;

        document.querySelectorAll(".quiz-btn").forEach(btn => {
            btn.addEventListener("click", function() {
                currentQuiz = this.getAttribute("data-monument");
                startQuiz(currentQuiz);
            });
        });

        function startQuiz(monument) {
            document.getElementById("quizTitle").textContent = monument + " Quiz";
            const qDiv = document.getElementById("quizQuestions");
            qDiv.innerHTML = "";
            quizzes[monument].forEach((item, i) => {
                let opts = item.options.map((opt, j) =>
                    <label style="display:block; margin:8px 0;"><input type="radio" name="q${i}" value="${j}"> ${opt}</label>
                ).join("");
                qDiv.innerHTML += <p><strong>Q${i+1}:</strong> ${item.q}<br>${opts}</p><hr>;
            });
            document.getElementById("quizResult").textContent = "";
            document.getElementById("quizModal").style.display = "flex";
        }

        function closeModal() {
            document.getElementById("quizModal").style.display = "none";
        }

        function submitQuiz() {
            let score = 0;
            quizzes[currentQuiz].forEach((item, i) => {
                let sel = document.querySelector(input[name="q${i}"]:checked);
                if (sel && parseInt(sel.value) === item.a) score++;
            });
            let total = quizzes[currentQuiz].length;
            let emoji = score === total ? "Perfect!" : score >= total*0.6 ? "Great!" : "Keep Learning!";
            document.getElementById("quizResult").innerHTML = Score: <strong>${score}/${total}</strong> ${emoji};
        }

        // Close modal on outside click
        window.addEventListener("click", function(e) {
            const modal = document.getElementById("quizModal");
            if (e.target === modal) closeModal();
        });

        // Quizzes Data
        const quizzes = {
            "Taj Mahal": [
                {q: "Built for?", options: ["Mumtaz Mahal", "Noor Jahan", "Jodha Bai"], a: 0},
                {q: "Material?", options: ["Red Stone", "White Marble", "Granite"], a: 1},
                {q: "Gardens represent?", options: ["Paradise", "War", "Trade"], a: 0}
            ],
